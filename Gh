from langchain_openai import ChatOpenAI

llm = ChatOpenAI(
    model="gpt-4o",
    api_key="YOUR_API_KEY",
    base_url="https://your-fpt-proxy.example.com/v1",  # FPT proxy endpoint
    temperature=0
)

messages = [
    ("system", "You are a helpful assistant."),
    ("human", "How do I use LangChain with GPT-4o proxy?")
]

output = llm.invoke(messages)
print(output)
