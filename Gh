def _render_text_frame(self, text_frame, slide_context=None):
    for paragraph in text_frame.paragraphs:
        # Get the original full text
        full_text = ''.join(run.text for run in paragraph.runs)
        
        # Render the full text with placeholders replaced
        rendered_full_text = self._render_run(full_text, slide_context)
        print(rendered_full_text)
        
        # To handle changes in length, we will maintain the runs' structure
        current_pos = 0
        for run in paragraph.runs:
            run_length = len(run.text)
            # Extract the corresponding portion of the rendered text
            new_run_text = rendered_full_text[current_pos:current_pos + run_length]
            
            # If the new_run_text length is different, adjust accordingly
            actual_new_length = len(new_run_text)
            if actual_new_length != run_length:
                new_run_text = rendered_full_text[current_pos:current_pos + actual_new_length]
                current_pos += actual_new_length
            else:
                current_pos += run_length
            
            run.text = new_run_text

        # Handle any remaining text if necessary
        if current_pos < len(rendered_full_text):
            remaining_text = rendered_full_text[current_pos:]
            print("Warning: Some text remains unassigned to runs:", remaining_text)
