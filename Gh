def insert_data_in_columns(table, start_col_idx, col_data):
    """
    Inserts data starting from the placeholder's column.
    If more data is present, new columns will be added to the right.
    """
    for row_idx, row_data in enumerate(col_data):
        if row_idx < len(table.rows):
            row = table.rows[row_idx]
            # Ensure that the row has enough cells for the insertion
            while len(row.cells) < start_col_idx + len(row_data):
                row.add_cell()  # Dynamically add new cells (columns) if needed
            # Insert the data into the corresponding cells
            for col_idx, value in enumerate(row_data):
                row.cells[start_col_idx + col_idx].text = value
        else:
            # Add a new row if the row doesn't exist
            new_row = table.add_row()
            for col_idx, value in enumerate(row_data):
                new_row.cells[start_col_idx + col_idx].text = value
