import pandas as pd

# Example DataFrame
df = pd.DataFrame({
    'title': ['Data Science Basics', 'AI and Machine Learning', 'Python Guide', 'Deep Learning Tips']
})

# Set of substrings to check
search_set = {'Python', 'AI', 'Data'}

# Function to find matching substrings
def find_matches(text, search_terms):
    return [term for term in search_terms if term in text]

# Apply the function and create a new column with matches
df['matched_terms'] = df['title'].apply(lambda x: find_matches(x, search_set))

# Filter rows where there's at least one match
filtered_df = df[df['matched_terms'].apply(bool)]

print(filtered_df)
