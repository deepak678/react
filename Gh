import pandas as pd
import codecs

# Load the Excel file
df = pd.read_excel("your_file.xlsx")

# Function to decode escaped unicode
def decode_unicode_escapes(text):
    if isinstance(text, str):
        return codecs.decode(text, 'unicode_escape')
    return text

# Apply to desired columns
df['Column1'] = df['Column1'].apply(decode_unicode_escapes)
df['Column2'] = df['Column2'].apply(decode_unicode_escapes)

# Save the result
df.to_excel("decoded_output.xlsx", index=False)
