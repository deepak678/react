import pandas as pd
from rapidfuzz import fuzz

df = pd.DataFrame({
    'text': ['apple pie', 'banana cake', 'I like cherry tart', 'baked apple with cinnamon']
})

search = "apple pie"

# Add similarity score
df['similarity'] = df['text'].apply(lambda x: fuzz.partial_ratio(search, x))

# Filter rows with 80%+ match
matches = df[df['similarity'] >= 80]

print(matches)
