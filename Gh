import json
import re

def extract_and_convert_json(text):
    # Use regex to find the first occurrence of a JSON-like structure
    match = re.search(r'\{.*\}', text, re.DOTALL)
    
    if match:
        json_string = match.group(0)  # Extract JSON part
        try:
            return json.loads(json_string)  # Convert to dictionary
        except json.JSONDecodeError as e:
            print("Invalid JSON:", e)
            return None
    else:
        print("No valid JSON found in the input")
        return None

# Example input with unwanted text before JSON
input_text = '''random text here
{ "avg" : 6, "score": 9 }'''

# Convert to dictionary
data_dict = extract_and_convert_json(input_text)

# Output
print(data_dict)
