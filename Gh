from sentence_transformers import SentenceTransformer, util

# Load model
model = SentenceTransformer('all-MiniLM-L6-v2')

# Example data
input_text = "Describe the benefits of a credit card."
generated_output = "Credit cards provide benefits like rewards, cashback, and convenience."

# Generate embeddings
input_embedding = model.encode(input_text, convert_to_tensor=True)
output_embedding = model.encode(generated_output, convert_to_tensor=True)

# Calculate similarity
similarity = util.cos_sim(input_embedding, output_embedding).item()
print(f"Accuracy (semantic similarity): {similarity:.2f}")
