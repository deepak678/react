# First ensure the table has enough rows
        required_rows = len(col_data)
        while required_rows > len(table.rows):
            table.add_row()  # Add new rows until we have enough
        
        # Now insert data
        for i, data in enumerate(col_data):
            row = table.rows[i]
            # Ensure enough cells in the row
            self.ensure_column_count(table, start_col_idx + len(data))

            # Populate the columns with data
            for j, value in enumerate(data):
                if start_col_idx + j < len(row.cells):  # Check bounds
                    row.cells[start_col_idx + j].text = value
